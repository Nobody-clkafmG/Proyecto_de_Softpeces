<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.softpeces.ui.InspeccionDialogController">
    <content>
        <GridPane hgap="12" vgap="10">
            <padding><Insets topRightBottomLeft="12"/></padding>

            <Label text="Olor (1..5)" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Slider fx:id="slOlor" min="1" max="5" value="3"
                    majorTickUnit="1" blockIncrement="1" snapToTicks="true"
                    showTickMarks="true" showTickLabels="true"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Textura (1..5)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Slider fx:id="slTextura" min="1" max="5" value="3"
                    majorTickUnit="1" blockIncrement="1" snapToTicks="true"
                    showTickMarks="true" showTickLabels="true"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Color (1..5)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Slider fx:id="slColor" min="1" max="5" value="3"
                    majorTickUnit="1" blockIncrement="1" snapToTicks="true"
                    showTickMarks="true" showTickLabels="true"
                    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Comentarios" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="txComentarios" prefRowCount="4"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Cancelar" cancelButton="true"/>
        <ButtonType text="Guardar" defaultButton="true"/>
    </buttonTypes>
</DialogPane>
