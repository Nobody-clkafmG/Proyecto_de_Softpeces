<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.5"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.softpeces.ui.MainController"
            stylesheets="@/css/dashboard.css">

    <!-- Sidebar -->
    <left>
        <!-- Wrapper con margenes iguales (top = left = bottom = 14) -->
        <StackPane styleClass="sidebar-container" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets top="14" left="14" bottom="14" right="8"/></padding>

            <!-- Caja azul -->
            <VBox spacing="16" alignment="TOP_LEFT" styleClass="sidebar">
                <!-- Perfil -->
                <VBox spacing="6" alignment="TOP_LEFT" styleClass="profile">
                    <Label fx:id="lblSidebarName" styleClass="profile-name" text="admin"/>
                    <Label fx:id="lblSidebarMail" styleClass="profile-sub"  text="admin@mail.com"/>
                </VBox>

                <!-- Menú -->
                <VBox spacing="6" styleClass="menu">
                    <Button fx:id="btnEstaciones" text="Estaciones y Tanques" styleClass="nav-item,selected" onAction="#showEstaciones"/>
                    <Button fx:id="btnLotes"      text="Muestreos"             styleClass="nav-item"          onAction="#showLotes"/>
                    <Button fx:id="btnFotos"      text="Clasificador (Fotos)"  styleClass="nav-item"          onAction="#showFotos"/>
                    <Button fx:id="btnBitacora"   text="Bitácora"              styleClass="nav-item"          onAction="#showBitacora"/>
                    <Button fx:id="btnReportes"   text="Reportes"              styleClass="nav-item"          onAction="#showReportes"/>
                    <Button fx:id="btnUsuarios"   text="Gestión de Usuarios"   styleClass="nav-item"          onAction="#showUsuarios"/>
                </VBox>

                <Pane VBox.vgrow="ALWAYS"/>

                <!-- Botón alineado igual que el resto -->
                <Button text="Cerrar sesión" onAction="#logout" styleClass="nav-item,logout"/>
            </VBox>
        </StackPane>
    </left>

    <center>
        <StackPane styleClass="panel-curvo-outer">
            <VBox spacing="16" styleClass="panel-curvo-inner">
                <StackPane fx:id="content"/>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
