<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.5"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.softpeces.ui.EstacionesController">

    <!-- TOP: filtro y acciones de estaciones -->
    <top>
        <HBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Filtro:"/>
                <TextField fx:id="txtFiltro" promptText="Filtrar por nombre de estación"/>
                <Button text="Aplicar filtro" onAction="#onFiltrar"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnNueva" text="Nueva estación" onAction="#onNuevaEstacion"/>
                <Button text="Editar" onAction="#onEditar"/>
                <Button text="Eliminar" onAction="#onEliminar"/>
            </children>
        </HBox>
    </top>

    <!-- BOTTOM: mensajes -->
    <bottom>
        <HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label fx:id="lblMsg"/>
            </children>
        </HBox>
    </bottom>

    <!-- CENTER: Split de estaciones (izq) y detalle (der) -->
    <center>
        <SplitPane dividerPositions="0.45">
            <items>

                <!-- IZQUIERDA: tabla de estaciones -->
                <BorderPane prefWidth="450">
                    <top>
                        <Label text="Estaciones">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </Label>
                    </top>
                    <center>
                        <TableView fx:id="table">
                            <columns>
                                <TableColumn fx:id="colId"           text="ID"            prefWidth="60"/>
                                <TableColumn fx:id="colNombre"       text="Nombre"        prefWidth="160"/>
                                <TableColumn fx:id="colEncargado"    text="Encargado"     prefWidth="160"/>
                                <TableColumn fx:id="colGeo"          text="Ubicación"     prefWidth="160"/>
                                <TableColumn fx:id="colCantTanques"  text="# Tanques"     prefWidth="100"/>
                            </columns>
                        </TableView>
                    </center>
                </BorderPane>

                <!-- DERECHA: Tanques arriba, Limpiezas abajo -->
                <BorderPane>
                    <top>
                        <HBox spacing="8">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <children>
                                <Label text="Tanques"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Nuevo tanque"    onAction="#onNuevoTanque"/>
                                <Button text="Editar tanque"   onAction="#onEditarTanque"/>
                                <Button text="Eliminar tanque" onAction="#onEliminarTanque"/>
                            </children>
                        </HBox>
                    </top>

                    <center>
                        <VBox spacing="8">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <children>

                                <!-- Tabla de tanques -->
                                <TableView fx:id="tblTanques" prefHeight="220">
                                    <columns>
                                        <TableColumn fx:id="colTId"      text="ID"            prefWidth="60"/>
                                        <TableColumn fx:id="colTCodigo"  text="Código"        prefWidth="120"/>
                                        <TableColumn fx:id="colTCap"     text="Cap. (L)"      prefWidth="100"/>
                                        <TableColumn fx:id="colTTipoPez" text="Tipo pez"      prefWidth="120"/>
                                        <TableColumn fx:id="colTPeces"   text="Peces aprox."  prefWidth="110"/>
                                        <TableColumn fx:id="colTFecha"   text="Fecha inicio"  prefWidth="120"/>
                                    </columns>
                                </TableView>

                                <!-- Encabezado Limpiezas + botones -->
                                <HBox spacing="8">
                                    <children>
                                        <Label text="Historial de limpiezas" />
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Button text="Agregar limpieza"  onAction="#onAgregarLimpieza"/>
                                        <Button text="Eliminar limpieza" onAction="#onEliminarLimpieza"/>
                                    </children>
                                </HBox>

                                <!-- Tabla de limpiezas -->
                                <TableView fx:id="limpiezasTable" prefHeight="220">
                                    <columns>
                                        <TableColumn fx:id="colLimpFecha" text="Fecha"        prefWidth="120"/>
                                        <TableColumn fx:id="colLimpResp"  text="Responsable"  prefWidth="160"/>
                                        <TableColumn fx:id="colLimpDesc"  text="Descripción"  prefWidth="300"/>
                                    </columns>
                                </TableView>

                            </children>
                        </VBox>
                    </center>
                </BorderPane>

            </items>
        </SplitPane>
    </center>

</BorderPane>
