<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.softpeces.ui.BitacoraController" spacing="8">

    <ToolBar>
        <Label text="Usuario:"/>
        <TextField fx:id="txtUser" prefWidth="140"/>

        <Label text="Acción:"/>
        <!-- antes era TextField; ahora ComboBox -->
        <ComboBox fx:id="cbAccion" prefWidth="160"/>

        <Label text="Entidad:"/>
        <!-- antes era TextField; ahora ComboBox -->
        <ComboBox fx:id="cbEntidad" prefWidth="160"/>

        <Label text="Desde:"/>
        <DatePicker fx:id="dpDesde"/>

        <Label text="Hasta:"/>
        <DatePicker fx:id="dpHasta"/>

        <Button text="Buscar" onAction="#onBuscar"/>
    </ToolBar>

    <TableView fx:id="tbl" prefHeight="540">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
            <TableColumn fx:id="colFecha" text="Fecha/Hora" prefWidth="160"/>
            <TableColumn fx:id="colUser" text="Usuario" prefWidth="120"/>
            <TableColumn fx:id="colAccion" text="Acción" prefWidth="160"/>
            <TableColumn fx:id="colEntidad" text="Entidad" prefWidth="120"/>
            <TableColumn fx:id="colEntidadId" text="Entidad ID" prefWidth="100"/>
            <TableColumn fx:id="colDetalle" text="Detalle" prefWidth="400"/>
        </columns>
    </TableView>

    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
