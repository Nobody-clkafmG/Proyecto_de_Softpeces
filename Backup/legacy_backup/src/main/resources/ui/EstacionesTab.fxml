<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.softpeces.ui.EstacionesController" spacing="8">
    <!-- Barra Estaciones -->
    <ToolBar>
        <Button text="Nueva" onAction="#onNueva"/>
        <Button text="Editar" onAction="#onEditar"/>
        <Button text="Eliminar" onAction="#onEliminar"/>
        <Separator/>
        <TextField fx:id="txtFiltro" promptText="Filtrar estación..." onKeyReleased="#onFiltrar"/>
    </ToolBar>

    <!-- Tabla Estaciones -->
    <TableView fx:id="table" prefHeight="220">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="320"/>
        </columns>
    </TableView>

    <Separator/>

    <!-- Barra Tanques -->
    <ToolBar>
        <Label text="Tanques de la estación seleccionada"/>
        <Separator/>
        <Button text="Nuevo tanque" onAction="#onNuevoTanque"/>
        <Button text="Editar tanque" onAction="#onEditarTanque"/>
        <Button text="Eliminar tanque" onAction="#onEliminarTanque"/>
    </ToolBar>

    <!-- Tabla Tanques -->
    <TableView fx:id="tblTanques" prefHeight="220">
        <columns>
            <TableColumn fx:id="colTId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colTCodigo" text="Código" prefWidth="180"/>
            <TableColumn fx:id="colTCap" text="Capacidad (L)" prefWidth="180"/>
        </columns>
    </TableView>

    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
