package com.softpeces.api.desktop;

import com.softpeces.infrastructure.config.AppConfig;
import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;

public class App extends Application {
    private AnnotationConfigApplicationContext ctx;

    @Override
    public void start(Stage stage) throws Exception {
        ctx = new AnnotationConfigApplicationContext(AppConfig.class);

        FXMLLoader loader = new FXMLLoader(getClass().getResource("/ui/MainView.fxml"));
        // inyecta controladores desde el contexto de Spring:
        loader.setControllerFactory(ctx::getBean);

        stage.setTitle("SoftPeces Desktop");
        stage.setScene(new Scene(loader.load()));
        stage.show();
    }

    @Override
    public void stop() {
        if (ctx != null) ctx.close();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
