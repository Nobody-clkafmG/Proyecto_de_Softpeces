<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.softpeces.ui.LoginController"
            stylesheets="@/css/dashboard.css">
    <children>
        <VBox alignment="CENTER" spacing="16" styleClass="content" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <VBox maxWidth="360" spacing="12" styleClass="card">
                <Label text="Soft Peces" styleClass="title"/>
                <Label text="Iniciar sesión" styleClass="subtitle"/>
                <TextField fx:id="txtUser" promptText="Usuario"/>
                <PasswordField fx:id="txtPass" promptText="Contraseña"/>
                <HBox spacing="8">
                    <CheckBox fx:id="chkRecordar" text="Recordarme"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Hyperlink text="¿Olvidaste tu contraseña?"/>
                </HBox>
                <Button text="Ingresar" onAction="#login" styleClass="btn-primary"/>
                <Label fx:id="lblMsg" text="" styleClass="muted"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
